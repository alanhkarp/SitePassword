{
    "manifest_version": 3,
    "name": "Site Password",
    "short_name": "Site Password for Safari",
    "description": "Don't remember your passwords. Don't store them.  Calculate them!",
    "version": "1.3.0",
    "background": {
        "page": "./bg.html"
    },
    "action": {
        "default_icon": "ssplogo.png",
        "default_popup": "ssp.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "run_at": "document_idle",
            "js": [
                "findpw.js" 
            ],
            "all_frames": true
        }
    ],
    "icons": {
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "background",
        "bookmarks",
        "browsingData",
        "downloads",
        "storage",
        "tabs"
    ]
}
