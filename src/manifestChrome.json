{
    "manifest_version": 3,
    "name": "Site Password",
    "short_name": "Site Password for Chrome",
    "description": "Don't remember your passwords. Don't store them.  Calculate them!",
    "version": "1.3.6",
    "background": {
        "service_worker": "bg.js", 
        "type": "module"
    },
    "action": {
        "default_icon": "ssplogo.png",
        "default_popup": "ssp.html"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "run_at": "document_idle",
            "js": [
                "findpw.js" 
            ],
            "all_frames": true
        }
    ],
    "icons": {
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "background",
        "bookmarks",
        "browsingData",
        "storage",
        "tabs"
    ]
}